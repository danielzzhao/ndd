<style>
ul {
    list-style-type: none;
}
</style>


<div class= "container">

<h2>Campaigns</h2>

	<div class="row">
		<div class="col-md-6">
			<h2> Completed: </h2>
			<% @campaigns.each do |campaign| %>
				<% if campaign.complete == true %>
					<h3><%= campaign.name %></h3>
					<ul>
						<li><%= campaign.date %></li>
						<li><%= campaign.image %></li>
						<li><%= campaign.description %></li>
						<li><%= campaign.website %></li>
						<li><%= link_to 'Delete', [campaign.city, campaign],
							method: :delete,
							data: { confirm: 'Are you sure?' }  %></li>
					</ul>
				<% end %>
			<% end %>
		</div>

		<div class="col-md-6">
			<h2> Upcoming: </h2>
			<% @campaigns.each do |campaign| %>
				<% if campaign.complete == false %>
					<h3><%= campaign.name %></h3>
					<ul>
						<li><%= campaign.date %></li>
						<li><%= campaign.image %></li>
						<li><%= campaign.description %></li>
						<li><%= campaign.website %></li>
						<li><%= link_to 'Delete', [campaign.city, campaign],
							method: :delete,
							data: { confirm: 'Are you sure?' }  %></li>
					</ul>
				<% end %>
			<% end %>
		</div>
	</div>

<h3>Add a Campaign</h3>
<%= render 'campaigns/form' %>

</div>


