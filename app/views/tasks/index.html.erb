<h1>Tasks</h1>

<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
  <div>
    City
    <%= f.select(
      :with_city_id,
      @filterrific.select_options[:with_city_id],
      { include_blank: '- Any -' }
    ) %>
  </div>
  <div>
  	Complete?
		<%= f.check_box :with_complete %>
  </div>

  <div>
    <%= link_to(
      'Reset filters',
      reset_filterrific_url,
    ) %>
  </div>
  <%# add an automated spinner to your form when the list is refreshed %>
  <%= render_filterrific_spinner %>
  <%= f.submit 'Filter' %>
<% end %>
<%= render(
  partial: 'tasks/list',
  locals: { tasks: @tasks }
) %>