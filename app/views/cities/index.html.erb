<h1>Cities</h1>

<% if user_signed_in? && current_user.admin? %>
<%= link_to 'Add New City', new_city_path %>
		<% end %>


<% @cities.each do |city| %>
	<tr></br>
		<td><%= city.name %></td>
		<td><%= city.description %></td>
		<td><%= link_to 'Show', city_path(city) %></td>
		<% if user_signed_in? && current_user.admin? %>
		<td><%= link_to 'Edit', edit_city_path(city) %></td>
		<td><%= link_to 'Delete', city_path(city), 
			method: :delete,
				data: { confirm: 'Are you sure?' }  %></td>
		<% end %>
	</tr>
<% end %>

</br><%= link_to "Don't see your city?", cities_ambassador_path %>

